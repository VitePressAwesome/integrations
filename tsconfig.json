{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "paths": {
      "@nolebase": [
        "./packages"
      ],
      "@nolebase/*/vite": [
        "./packages/*/vite",
        "./packages/*/src/vite"
      ],
      "@nolebase/*/client": [
        "./packages/*/client",
        "./packages/*/src/client"
      ],
      "@nolebase/*/vitepress": [
        "./packages/*/vitepress",
        "./packages/*/src/vitepress"
      ],
      "@nolebase/*/markdown-it": [
        "./packages/*/markdown-it",
        "./packages/*/src/markdown-it"
      ],
      "@nolebase/*/plugins": [
        "./packages/*/src/plugins"
      ],
      "@nolebase/*": [
        "./packages/*",
        "./packages/*/src/"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "resolveJsonModule": true,

    "types": [
      "node",
      "vite/client"
    ],
    "strict": true,
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*.d.ts",
    "packages/**/*.d.mts",
    "packages/**/*.ts",
    "packages/**/*.mts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "docs/**/*.ts",
    "docs/**/*.mts",
    "docs/**/*.vue",
    "docs/**/.vitepress/**/*.ts",
    "docs/**/.vitepress/**/*.mts",
    "docs/**/.vitepress/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
